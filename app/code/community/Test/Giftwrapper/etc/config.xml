<config>
    <modules>
        <Test_Giftwrapper>
            <version>1.0.3</version>
        </Test_Giftwrapper>
    </modules>
    <global>
        <models>
            <test_giftwrapper>
                <class>Test_Giftwrapper_Model</class>
                <resourceModel>test_giftwrapper_resource</resourceModel>
            </test_giftwrapper>
        </models>
        <resources>
            <test_giftwrapper_setup>
                <setup>
                    <module>Test_Giftwrapper</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </test_giftwrapper_setup>
        </resources>
        <helpers>
            <test_giftwrapper>
                <class>Test_Giftwrapper_Helper</class>
            </test_giftwrapper>
        </helpers>
        <blocks>
            <test_giftwrapper>
                <class>Test_Giftwrapper_Block</class>
            </test_giftwrapper>
        </blocks>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <test_checkout_cart_product_add_after>
                        <class>test_giftwrapper/observer</class>
                        <method>updateQuoteItems</method>
                    </test_checkout_cart_product_add_after>
                </observers>
            </checkout_cart_product_add_after>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <test_sales_convert_quote_item_to_order_item>
                        <class>test_giftwrapper/observer</class>
                        <method>salesConvertQuoteItemToOrderItem</method>
                    </test_sales_convert_quote_item_to_order_item>
                </observers>
            </sales_convert_quote_item_to_order_item>
            <sales_quote_remove_item>
                <observers>
                    <test_sales_quote_remove_item>
                        <class>test_giftwrapper/observer</class>
                        <method>updateGiftWrapperAfterRemovingParent</method>
                    </test_sales_quote_remove_item>
                </observers>
            </sales_quote_remove_item>
        </events>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <is_giftwrapper_product />
                    </product_attributes>
                </item>
            </quote>
        </sales>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <test_giftwrapper>
                    <files>
                        <default>Test_Giftwrapper.csv</default>
                    </files>
                </test_giftwrapper>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <test_giftwrapper>
                    <file>test_giftwrapper/gift_wrapper.xml</file>
                </test_giftwrapper>
            </updates>
        </layout>
        <routers>
            <test_giftwrapper>
                <use>standard</use>
                <args>
                    <module>Test_Giftwrapper</module>
                    <frontName>giftwrapper</frontName>
                </args>
            </test_giftwrapper>
        </routers>
    </frontend>
    <default>
        <test_giftwrapper>
            <test_group>
                <is_active>1</is_active>
            </test_group>
        </test_giftwrapper>
    </default>
</config>